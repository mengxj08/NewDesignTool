<UserControl x:Class="NewDesignTool.Pages.RQ_list1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid Style="{StaticResource ContentRoot}">
        <Canvas x:Name="canvas_RQ1">
            <TextBlock Text="Your Question:" Height="40" Width="206" Canvas.Left="10" Canvas.Top="21" Style="{StaticResource Heading1}"/>
            <TextBox x:Name="YourQuestion" Height="228" Canvas.Left="10" TextWrapping="Wrap" Width="448" Text="{Binding Path=researchQuestion.experimentTitle, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Canvas.Top="81"/>
            <TextBlock Height="118" Width="448" Canvas.Left="10" Canvas.Top="328" Style="{StaticResource Heading2}">
                Before designing the experiment,you should be clear that <LineBreak /> what kind of question you are focused on.
            </TextBlock>
        </Canvas>
    </Grid>
</UserControl>
